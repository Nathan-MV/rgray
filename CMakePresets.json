{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20
    },
    "configurePresets": [
        {
            "name": "default",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "TRUE"
            }
        },
        {
            "name": "windows_mri_3_4",
            "inherits": "default",
            "displayName": "Windows MRI 3.4",
            "generator": "MinGW Makefiles",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "C:/Ruby34-x64/msys64/ucrt64/bin/gcc.exe",
                "CMAKE_CXX_COMPILER": "C:/Ruby34-x64/msys64/ucrt64/bin/g++.exe",
                "CMAKE_MAKE_PROGRAM": "C:/Ruby34-x64/msys64/ucrt64/bin/mingw32-make.exe",
                "CMAKE_COMMAND": "C:/Ruby34-x64/msys64/ucrt64/bin/cmake.exe"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "windows-release",
            "inherits": "default",
            "displayName": "Windows MSYS2 (ucrt64)",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "C:/msys64/ucrt64/bin/gcc.exe",
                "CMAKE_CXX_COMPILER": "C:/msys64/ucrt64/bin/g++.exe",
                "CMAKE_C_COMPILER_LAUNCHER": "C:/msys64/ucrt64/bin/sccache.exe",
                "CMAKE_CXX_COMPILER_LAUNCHER": "C:/msys64/ucrt64/bin/sccache.exe",
                "CMAKE_MAKE_PROGRAM": "C:/msys64/ucrt64/bin/ninja.exe",
                "CMAKE_CXX_FLAGS_RELEASE": "-O3 -ffast-math -flto=auto -march=native",
                "CMAKE_C_FLAGS_RELEASE": "-O3 -ffast-math -flto=auto -march=native",
                "CMAKE_EXE_LINKER_FLAGS": "-fuse-ld=mold",
                "CMAKE_SHARED_LINKER_FLAGS": "-fuse-ld=mold",
                "CMAKE_MODULE_LINKER_FLAGS": "-fuse-ld=mold",
                "CMAKE_CXX_FLAGS": "-g0",
                "CMAKE_C_FLAGS": "-g0"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "linux-release",
            "inherits": "default",
            "displayName": "Linux Clang + Ninja",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_C_COMPILER_LAUNCHER": "sccache",
                "CMAKE_CXX_COMPILER_LAUNCHER": "sccache",
                "CMAKE_CXX_FLAGS_RELEASE": "-O3 -ffast-math -flto=full -march=native",
                "CMAKE_EXE_LINKER_FLAGS": "-fuse-ld=mold",
                "CMAKE_SHARED_LINKER_FLAGS": "-fuse-ld=mold",
                "CMAKE_MODULE_LINKER_FLAGS": "-fuse-ld=mold",
                "CMAKE_CXX_FLAGS": "-g0",
                "CMAKE_C_FLAGS": "-g0"
            }
        },
        {
            "name": "macos-release",
            "inherits": "default",
            "displayName": "macOS Clang + Ninja",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
                "CMAKE_C_COMPILER_LAUNCHER": "sccache",
                "CMAKE_CXX_COMPILER_LAUNCHER": "sccache",
                "CMAKE_CXX_FLAGS_RELEASE": "-O3 -ffast-math -flto=full -march=native",
                "CMAKE_C_FLAGS_RELEASE": "-O3 -ffast-math -flto=full -march=native"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "windows-release-mri-3-4",
            "configurePreset": "windows_mri_3_4"
        },
        {
            "name": "windows-release",
            "configurePreset": "windows-release"
        },
        {
            "name": "linux-release",
            "configurePreset": "linux-release"
        },
        {
            "name": "macos-release",
            "configurePreset": "macos-release"
        }
    ]
}